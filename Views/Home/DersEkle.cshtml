@model OgrenciDersYonetimSistemiMVC.Models.Ders

@{
    ViewData["Title"] = "Ders Ekle";
}

<h1>Ders Ekle</h1>

<form asp-action="DersEkle" method="post">
    <div class="form-group">
        <label for="Ad">Ders Adı</label>
        <input type="text" class="form-control" id="Ad" name="Ad" required />
    </div>
    <div class="form-group">
        <label for="Kredi">Kredi</label>
        <input type="number" class="form-control" id="Kredi" name="Kredi" required />
    </div>
    <div class="form-group">
        <label for="OgretimGorevlisiId">Öğretim Görevlisi</label>
        <select class="form-control" id="OgretimGorevlisiId" name="ogretimGorevlisiId" required>
            @foreach (var ogretimGorevlisi in ViewBag.OgretimGorevlileri)
            {
                <option value="@ogretimGorevlisi.Id">@ogretimGorevlisi.Ad @ogretimGorevlisi.Soyad</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>